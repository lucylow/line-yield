{
  "name": "line-yield-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "dev:liff": "pnpm --filter @line-yield/liff-app dev",
    "dev:web": "pnpm --filter @line-yield/web-app dev",
    "build": "tsc && vite build",
    "build:dev": "vite build --mode development",
    "build:all": "pnpm --filter @line-yield/shared build && pnpm --filter @line-yield/liff-app build && pnpm --filter @line-yield/web-app build",
    "build:liff": "pnpm --filter @line-yield/liff-app build",
    "build:web": "pnpm --filter @line-yield/web-app build",
    "build:shared": "pnpm --filter @line-yield/shared build",
    "preview": "vite preview",
    "install:all": "pnpm install && pnpm --filter @line-yield/shared install && pnpm --filter @line-yield/liff-app install && pnpm --filter @line-yield/web-app install"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-query": "^4.29.0",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "ethers": "^6.15.0",
    "lovable-tagger": "^1.1.9",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "tailwind-merge": "^2.0.0",
    "viem": "^1.19.0",
    "wagmi": "^1.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
