# LINE Yield Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LINE INTEGRATION
# =============================================================================

# LIFF ID from LINE Developers Console
VITE_LIFF_ID=your-liff-id-here

# LINE Login Channel ID
VITE_LINE_CHANNEL_ID=your-channel-id-here

# LINE Messaging API Channel Access Token (Backend only)
LINE_CHANNEL_ACCESS_TOKEN=your-channel-access-token-here

# LINE Messaging API Channel Secret (Backend only)
LINE_CHANNEL_SECRET=your-channel-secret-here

# =============================================================================
# WALLET CONNECT / REOWN
# =============================================================================

# Project ID from Reown (WalletConnect)
VITE_PROJECT_ID=your-project-id-here

# WalletConnect Relay URL
VITE_RELAY_URL=wss://relay.walletconnect.com

# =============================================================================
# KAIA BLOCKCHAIN INTEGRATION
# =============================================================================

# Kaia Network Configuration
VITE_KAIA_RPC_URL=https://rpc.kaia.one
VITE_KAIA_CHAIN_ID=100
VITE_KAIA_NETWORK_NAME=Kaia Mainnet
VITE_KAIA_BLOCK_EXPLORER=https://scope.kaia.one

# Kaia-Native USDT (Native Stablecoin)
VITE_KAIA_USDT_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
VITE_KAIA_USDT_DECIMALS=6
VITE_KAIA_USDT_SYMBOL=USDT

# Kaia Stablecoin DeFi Protocols
VITE_KAIA_DEFI_PROTOCOLS=uniswap-v3,aave-v3,compound-v3
VITE_KAIA_YIELD_VAULT_ADDRESS=0x1234567890123456789012345678901234567890
VITE_KAIA_LENDING_POOL_ADDRESS=0x1234567890123456789012345678901234567890

# Kaia Trade-and-Earn Contracts
VITE_KAIA_TRADING_POOL_ADDRESS=0x1234567890123456789012345678901234567890
VITE_KAIA_REWARDS_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
VITE_KAIA_LIQUIDITY_MINING_ADDRESS=0x1234567890123456789012345678901234567890

# Kaia Ecosystem Tokens
VITE_KAIA_TOKEN_ADDRESS=0x1234567890123456789012345678901234567890
VITE_KAIA_WRAPPED_TOKEN_ADDRESS=0x1234567890123456789012345678901234567890

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API Base URL
VITE_API_BASE_URL=http://localhost:3001/api

# API Keys (Backend only - NEVER expose in frontend)
API_SECRET_KEY=your-api-secret-key-here
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# PAYMENT INTEGRATION
# =============================================================================

# Stripe Configuration (Backend only)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Payment Provider Configuration
PAYMENT_PROVIDER_URL=https://api.payment-provider.com
PAYMENT_PROVIDER_API_KEY=your-payment-provider-api-key-here

# =============================================================================
# DATABASE CONFIGURATION (Backend only)
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/line_yield
DB_HOST=localhost
DB_PORT=5432
DB_NAME=line_yield
DB_USER=your-db-username
DB_PASSWORD=your-db-password

# Redis Cache (Backend only)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# CoinMarketCap API (for real-time prices)
CMC_API_KEY=your-cmc-api-key-here

# Kaia Open API
KAIA_API_KEY=your-kaia-api-key-here

# IP Geolocation Service
IPAPI_API_KEY=your-ipapi-key-here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption Keys (Backend only)
ENCRYPTION_KEY=your-32-character-encryption-key-here
SIGNING_KEY=your-signing-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://liff.line.me

# =============================================================================
# DEVELOPMENT / DEBUGGING
# =============================================================================

# Environment
NODE_ENV=development

# Debug Mode
DEBUG=true
LOG_LEVEL=debug

# Hot Reload
VITE_HOT_RELOAD=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production URLs
PRODUCTION_DOMAIN=https://line-yield-mini-dapp.com
PRODUCTION_API_URL=https://api.line-yield.com

# CDN Configuration
CDN_URL=https://cdn.line-yield.com

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_ID=your-analytics-id-here

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_PAYMENT=true
ENABLE_NFT_COLLATERAL=true
ENABLE_QR_PAYMENTS=true
ENABLE_INVITE_FRIENDS=true
ENABLE_LOCALIZATION=true

# =============================================================================
# MINI DAPP SPECIFIC
# =============================================================================

# Mini Dapp Configuration
MINI_DAPP_NAME=LINE Yield
MINI_DAPP_VERSION=1.0.0
MINI_DAPP_DESCRIPTION=Earn yield on Kaia-USDT safely and easily

# Open Graph Configuration
OG_TITLE=LINE Yield | Mini Dapp
OG_DESCRIPTION=Seamless DeFi experience inside LINE Messenger powered by Kaia Blockchain
OG_IMAGE=https://line-yield-mini-dapp.com/assets/og-image.svg
OG_URL=https://line-yield-mini-dapp.com

# Twitter Card Configuration
TWITTER_SITE=@line_yield
TWITTER_CREATOR=@line_yield

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default Language
DEFAULT_LANGUAGE=en

# Supported Languages
SUPPORTED_LANGUAGES=en,ja

# Language Detection Method
LANGUAGE_DETECTION_METHOD=browser

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Push Notifications (Backend only)
FCM_SERVER_KEY=your-fcm-server-key-here
FCM_PROJECT_ID=your-fcm-project-id-here

# Email Notifications (Backend only)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration (Backend only)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=line-yield-backups
BACKUP_S3_REGION=us-east-1

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# Terms of Service URL
TERMS_OF_SERVICE_URL=https://line-yield.com/terms

# Privacy Policy URL
PRIVACY_POLICY_URL=https://line-yield.com/privacy

# Cookie Policy URL
COOKIE_POLICY_URL=https://line-yield.com/cookies

# =============================================================================
# TESTING
# =============================================================================

# Test Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/line_yield_test
TEST_REDIS_URL=redis://localhost:6379/1

# Mock Services
MOCK_PAYMENT_PROVIDER=true
MOCK_BLOCKCHAIN=true
MOCK_LINE_API=true