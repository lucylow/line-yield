# LINE Yield Backend - Environment Variables

# Application Configuration
NODE_ENV=development
PORT=3000

# Kaia Network Configuration
KAIA_RPC_URL=https://api.baobab.klaytn.net:8651
KAIA_CHAIN_ID=1001
WALLET_PRIVATE_KEY=your_wallet_private_key_here
KAIA_GAS_STATION_URL=https://gasstation.klaytn.net

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=line_yield
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Contract Addresses
VAULT_ADDRESS=0x1234567890123456789012345678901234567890
STRATEGY_MANAGER_ADDRESS=0x1234567890123456789012345678901234567890
GASLESS_VAULT_ADDRESS=0x1234567890123456789012345678901234567890

# Strategy Configuration
AAVE_STRATEGY_ADDRESS=0x1234567890123456789012345678901234567890
AAVE_ALLOCATION=0.4
AAVE_ENABLED=true

KLAYSWAP_STRATEGY_ADDRESS=0x1234567890123456789012345678901234567890
KLAYSWAP_ALLOCATION=0.35
KLAYSWAP_ENABLED=true

COMPOUND_STRATEGY_ADDRESS=0x1234567890123456789012345678901234567890
COMPOUND_ALLOCATION=0.25
COMPOUND_ENABLED=true

# Thresholds
REBALANCE_THRESHOLD=0.005
MIN_YIELD_DIFFERENCE=0.001
MAX_GAS_PRICE_GWEI=50

# Intervals (in milliseconds)
YIELD_UPDATE_INTERVAL=600000
REBALANCE_CHECK_INTERVAL=300000
HEALTH_CHECK_INTERVAL=30000

# Security
JWT_SECRET=your_jwt_secret_key_change_in_production
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Gasless Transactions
GASLESS_ENABLED=true
RELAYER_URL=http://localhost:3001
GASLESS_MAX_GAS_PRICE_GWEI=30

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# LINE Integration Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_ID=your_line_channel_id
LINE_PROVIDER_ID=your_line_provider_id

# Supabase Configuration (Backend Only - Service Role)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# Lovable Integration (Backend Only)
LOVABLE_CLIENT_SECRET=your_lovable_client_secret
LOVABLE_API_KEY=your_lovable_api_key

# Additional Security
ENCRYPTION_KEY=your_32_character_encryption_key
API_RATE_LIMIT_SECRET=your_rate_limit_secret
# Required: Get these from LINE Developers Console
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_ID=your_line_channel_id_here
LINE_PROVIDER_ID=your_line_provider_id_here
LINE_LIFF_ID=your_liff_app_id_here