{
  "name": "line-yield-backend",
  "version": "1.0.0",
  "description": "Backend services for LINE Yield protocol with gasless transactions",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:compilation": "ts-node scripts/test-compilation.ts",
    "test:setup": "ts-node src/test-setup.ts",
    "db:init": "ts-node scripts/init-db.ts",
    "db:migrate": "ts-node scripts/init-db.ts",
    "verify-line-setup": "ts-node scripts/verify-line-setup.ts",
    "manage-rich-menu": "ts-node scripts/manage-rich-menu.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run test:compilation"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ethers": "^6.8.1",
    "pg": "^8.11.0",
    "cron": "^2.2.0",
    "dotenv": "^16.3.1",
    "redis": "^4.6.7",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^2.4.1",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "@types/pg": "^8.10.2",
    "@types/cron": "^2.0.0",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/compression": "^1.7.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/multer": "^1.4.7",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.0.4",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.5.0",
    "@types/jest": "^29.5.2",
    "ts-jest": "^29.1.0",
    "eslint": "^8.42.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "kaia",
    "klaytn",
    "defi",
    "yield",
    "vault",
    "gasless",
    "line",
    "messenger"
  ],
  "author": "Kaia Yield Optimizer Team",
  "license": "MIT"
}
